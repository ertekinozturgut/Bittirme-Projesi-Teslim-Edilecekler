<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rlvekran"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/lytustmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="124dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgdepo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="5dp"
                app:srcCompat="@drawable/depo" />

            <ImageView
                android:id="@+id/imganalizler"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="5dp"
                app:srcCompat="@drawable/graph" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytaltmenu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="183dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/imgarac"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="20dp"
                app:srcCompat="@drawable/truck" />
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>